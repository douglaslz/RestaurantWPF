        <Button x:Name="button" Content="Add" HorizontalAlignment="Left" Margin="41,132,0,0" VerticalAlignment="Top" Width="140" Height="25" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="Add" HorizontalAlignment="Left" Margin="211,132,0,0" VerticalAlignment="Top" Width="140" Height="25" Click="button_Copy_Click"/>
        <Button x:Name="button_Copy1" Content="Add" HorizontalAlignment="Left" Margin="389,132,0,0" VerticalAlignment="Top" Width="140" Height="25" Click="button_Copy1_Click"/>
