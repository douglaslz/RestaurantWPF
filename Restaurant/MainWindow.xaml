        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="245" Margin="41,176,0,0" VerticalAlignment="Top" Width="600" MouseDoubleClick="datagrid_MouseDoubleClick" />



        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="139,487,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button1" Content="Remove &#xD;&#xA;ITem" HorizontalAlignment="Left" Margin="671,181,0,0" VerticalAlignment="Top" Width="75" Height="85" Click="button1_Click"/>
