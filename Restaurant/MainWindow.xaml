        xmlns:local="clr-namespace:Restaurant"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="40,97,0,0" VerticalAlignment="Top" Width="140">

        </ComboBox>
        <Label x:Name="label" Content="Beverage" HorizontalAlignment="Left" Margin="40,37,0,0" VerticalAlignment="Top" Width="140"/>
        <ComboBox x:Name="comboBox_Copy" HorizontalAlignment="Left" Margin="210,97,0,0" VerticalAlignment="Top" Width="140">

        </ComboBox>
