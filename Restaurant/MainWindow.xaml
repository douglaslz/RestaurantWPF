        <Label x:Name="label1" Content="Sub-Total" HorizontalAlignment="Left" Margin="61,484,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="23" Margin="421,487,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label1_Copy" Content="Total" HorizontalAlignment="Left" Margin="316,481,0,0" VerticalAlignment="Top" Width="80"/>

    </Grid>
</Window>
