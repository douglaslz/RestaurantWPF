        <ComboBox x:Name="comboBox_Copy1" HorizontalAlignment="Left" Margin="388,97,0,0" VerticalAlignment="Top" Width="140">
        </ComboBox>
        <Label x:Name="label_Copy1" Content="Main Course " HorizontalAlignment="Left" Margin="388,37,0,0" VerticalAlignment="Top" Width="140"/>
        <ComboBox x:Name="comboBox_Copy2" HorizontalAlignment="Left" Margin="560,97,0,0" VerticalAlignment="Top" Width="140">

